<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="#97C0FB" >

    <ImageView
        android:layout_width="272dp"
        android:layout_height="264dp"
        android:contentDescription="Game Battle Phase Screenshot"
        android:src="@drawable/tutorial_step_5" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Battle Phase"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingHorizontal="16dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="When you select a position on the board, two outcomes are possible:"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:paddingTop="4dp"
        android:paddingHorizontal="16dp"
        android:lineSpacingMultiplier="1.2"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="• Numbers indicate the total mines in the eight surrounding cells."
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:paddingTop="4dp"
        android:paddingHorizontal="16dp"
        android:lineSpacingMultiplier="1.2"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="• A black mine symbol means you've uncovered an opponent's mine."
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:paddingTop="4dp"
        android:paddingHorizontal="16dp"
        android:lineSpacingMultiplier="1.2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:paddingHorizontal="16dp"
        android:paddingTop="4dp"
        android:paddingBottom="24dp"
        android:text="The game ends when all mines are found, or the rounds are exhausted. The player who finds the most mines wins. "
        android:textColor="@android:color/black"
        android:textSize="18sp" />

</LinearLayout>